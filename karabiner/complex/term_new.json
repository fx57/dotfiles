{
    "title": "Terminal L_option-N for new window",
    "rules":
    [
        {
            "description": "Terminal L_option-N for new window",
            "manipulators":
            [
                {
                    "type": "basic",
                    "conditions":
                    [
                        {
                            "bundle_identifiers":
                            [
                                "com\\.apple\\.Terminal"
                            ],
                            "type": "frontmost_application_if"
                        }
                    ],
                    "from":
                    {
                        "key_code": "n",
                        "modifiers":
                        {
                            "mandatory":
                            [
                                "left_option"
                            ]
                        }
                    },
                    "to":
                    [
                        {
                            "key_code": "n",
                            "modifiers":
                            [
                                "right_command"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}

